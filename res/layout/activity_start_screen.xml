<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/title"
        android:contentDescription="@string/title_image"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/title" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="6"
        android:contentDescription="@string/start_screen_description"
        android:scaleType="centerCrop"
        android:src="@drawable/start_screen" />

    <ImageView
        android:id="@+id/go_button"
        android:contentDescription="@string/go_button"
        android:layout_width="fill_parent"
        android:scaleType="centerCrop"
        android:layout_height="0sp"
        android:layout_weight="1"
		android:src="@drawable/go_button" />

</LinearLayout>